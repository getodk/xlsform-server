server {
    listen 80;
    server_name {{ server_name }};

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root {{ source_home }};
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:{{ source_home }}/{{ django_name }}.sock;
    }
}
